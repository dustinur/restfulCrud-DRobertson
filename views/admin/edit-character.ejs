<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/character.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="character-form" action="/admin/<% if (editing) { %>edit-character<% } else { %>add-character<% } %>" method="POST">
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= character.name %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= character.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="classType">Class</label>
                <input type="text" name="classType" id="classType" value="<% if (editing) { %><%= character.classType %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= character.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= character.id %>" name="characterId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Character<% } else { %>Add Character<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>