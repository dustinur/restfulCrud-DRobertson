<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/character.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (chars.length > 0) { %>
                    <div class="grid">
                        <% for (let character of chars) { %>
                            <article class="card character-item">
                                <header class="card__header">
                                    <h1 class="character__title">
                                        <%= character.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= character.imageUrl %>" alt="<%= character.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="character__price">$
                                        <%= character.price %>
                                    </h2>
                                    <p class="character__description">
                                        <%= character.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-character/<%= character.id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-character" method="POST">
                                        <input type="hidden" value="<%= character.id %>" name="characterId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Characters Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>