<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/character.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (chars.length > 0) { %>
            <div class="grid">
                <% for (let character of chars) { %>
                    <article class="card character-item">
                        <header class="card__header">
                            <h1 class="character__name"><%= character.name %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= character.imageUrl %>"
                                alt="<%= character.name %>">
                        </div>
                        <div class="card__content">
                            <h2 class="character__classType"><%= character.classType %></h2>
                            <p class="character__description"><%= character.description %></p>
                        </div>
                        <div class="card__actions">
                                <a href="/characters/<%= character._id %>" class="btn">Details</a>
                            <%- include('../includes/add-to-cart.ejs', {character: character}) %>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Characters Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>